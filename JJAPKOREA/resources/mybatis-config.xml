<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/> 
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="jjapkorea.member.model.vo.MemberVo" alias="memberVo"/>
		<typeAlias type="jjapkorea.member.model.vo.BusinessVo" alias="businessVo"/>
		<typeAlias type="jjapkorea.member.model.vo.PersonVo" alias="personVo"/>
		<typeAlias type="jjapkorea.jobposting.model.dto.JobpostingDto" alias="jobpostingDto"/>
		<typeAlias type="jjapkorea.scrap.model.dto.ScrapDto" alias="scrapDto"/>
	</typeAliases>
	
	<environments default="development1">
		<environment id="development1">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
				<property name="username" value="jjapkorea"/>
				<property name="password" value="jjapkorea"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="/mappers/member-mapper.xml"/>
		<mapper resource="/mappers/jobposting-mapper.xml"/>
		<mapper resource="/mappers/scrap-mapper.xml"/>
	</mappers>
		
</configuration>
